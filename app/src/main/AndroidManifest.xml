<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" /> <!-- Audio Permission for android 13 or higher -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" /> <!-- Notification Permission for Android 14 -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".ApplicationClass"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/logo_round"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BlissfulVibes"
        tools:targetApi="31">
        <activity
            android:name=".Activity.RecentPlayList"
            android:exported="false" />
        <activity
            android:name=".Activity.About"
            android:exported="false" />
        <activity
            android:name=".Activity.PrivacyPolicy"
            android:exported="false" />
        <activity
            android:name=".Activity.Help"
            android:exported="false" />
        <activity
            android:name=".Activity.PlaylistSongView"
            android:exported="false"
            android:theme="@style/Theme.BlissfulVibes" />
        <activity
            android:name=".Activity.PlayMusicStreamActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.ViewSongListActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.OtpActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.FrontActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.DashBoard"
            android:exported="false" />
        <activity
            android:name=".AddSongPlaylistActivity"
            android:exported="false" /> <!-- <activity -->
        <!-- android:name=".PlaylistMusicListActivity" -->
        <!-- android:exported="false" /> -->
        <activity
            android:name=".BaseSetting"
            android:exported="false" />
        <activity
            android:name=".Activity.AppSetting"
            android:exported="false" />
        <activity
            android:name=".PlayNextOperation"
            android:exported="false" />
        <activity
            android:name=".FavoriteMusic"
            android:exported="false" />
        <activity
            android:name=".PlayList"
            android:exported="false" />
        <activity
            android:name=".splash_screen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <service
            android:name=".Service.MusicServiceOnline"
            android:exported="true"
            android:foregroundServiceType="mediaPlayback">
            <intent-filter>
                <action android:name="com.song.nafis.nf.TuneLyf.ACTION_PLAY_PAUSE" />
                <action android:name="com.song.nafis.nf.TuneLyf.ACTION_NEXT" />
                <action android:name="com.song.nafis.nf.TuneLyf.ACTION_PREV" />
                <action android:name="com.song.nafis.nf.TuneLyf.ACTION_EXIT" />
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </service>



        <receiver android:name=".BroadReciver.ExoPlaybackReceiver" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
                <action android:name="com.song.nafis.nf.TuneLyf.ACTION_PLAY_PAUSE" />
                <action android:name="com.song.nafis.nf.TuneLyf.ACTION_NEXT" />
                <action android:name="com.song.nafis.nf.TuneLyf.ACTION_PREV" />
                <action android:name="com.song.nafis.nf.TuneLyf.ACTION_EXIT" />
            </intent-filter>
        </receiver>



    </application>

</manifest>