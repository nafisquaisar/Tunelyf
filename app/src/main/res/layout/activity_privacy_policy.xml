                android:paddingBottom="12dp" />

            <!-- 5 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5. Account Deletion"
                style="@style/TextAppearance.Material3.TitleMedium"
                android:textStyle="bold"
                android:paddingTop="12dp"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You may request to delete your account  by contacting us at:\n\nðŸ“§ tunelyfmusic@gmail.com"
                style="@style/TextAppearance.Material3.BodyMedium"
                android:paddingBottom="12dp" />

            <!-- 6 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6. Children's Privacy"
                style="@style/TextAppearance.Material3.TitleMedium"
                android:textStyle="bold"
                android:paddingTop="12dp"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This app is not intended for children under the age of 13. If you are under 13, please do not use this app or provide any personal information."
                style="@style/TextAppearance.Material3.BodyMedium"
                android:paddingBottom="12dp" />

            <!-- 7 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7. Changes to this Privacy Policy"
                style="@style/TextAppearance.Material3.TitleMedium"
                android:textStyle="bold"
                android:paddingTop="12dp"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We may update this policy occasionally. All changes will be notified through the app or via email (if applicable). Continued use of the app implies agreement with the latest version of the policy."
                style="@style/TextAppearance.Material3.BodyMedium"
                android:paddingBottom="12dp" />

            <!-- 8 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8. Contact Us"
                style="@style/TextAppearance.Material3.TitleMedium"
                android:textStyle="bold"
                android:paddingTop="12dp"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="If you have any questions about this Privacy Policy or your data, please contact us at:\n\nðŸ“§ tunelyfmusic@gmail.com"
                style="@style/TextAppearance.Material3.BodyMedium"
                android:paddingBottom="24dp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
