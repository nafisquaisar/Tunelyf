                android:gravity="center"
                android:paddingBottom="8dp"/>

            <!-- Effective Date -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Effective Date: July 12, 2025"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="@color/secondary_icon_color"
                android:gravity="center"
                android:paddingBottom="16dp" />

            <!-- 1 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Information We Collect"
                style="@style/TextAppearance.Material3.TitleMedium"
                android:textStyle="bold"
                android:paddingTop="12dp"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We collect the following personal information when you register or sign in to the app:"
                style="@style/TextAppearance.Material3.BodyMedium"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â€¢ Full Name\nâ€¢ Email Address\nâ€¢ Mobile Number (optional)\nâ€¢ Password (encrypted)\nâ€¢ Google Account Info (if using Google Sign-In)\n\nWe do not collect or store any sensitive information beyond what is required to provide the core features of the app."
                style="@style/TextAppearance.Material3.BodyMedium"
                android:paddingBottom="12dp" />

            <!-- 2 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. How We Use Your Information"
                style="@style/TextAppearance.Material3.TitleMedium"
                android:textStyle="bold"
                android:paddingTop="12dp"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your information is used to:"
                style="@style/TextAppearance.Material3.BodyMedium" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â€¢ Authenticate your login (email/password or Google)\nâ€¢ Personalize your experience (favorites, playlists)\nâ€¢ Maintain your account and playback preferences\nâ€¢ Allow you to delete your data when requested\n\nWe do not share, sell, or rent your personal data to any third parties."
