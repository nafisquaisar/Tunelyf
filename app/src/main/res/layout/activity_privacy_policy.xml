                android:paddingBottom="12dp" />

            <!-- 3 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Data Storage &amp; Security"
                style="@style/TextAppearance.Material3.TitleMedium"
                android:textStyle="bold"
                android:paddingTop="12dp"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We use Firebase Authentication and Firebase Realtime Database or Firestore to store and manage user data securely.\n\nPasswords are encrypted and never stored in plain text."
                style="@style/TextAppearance.Material3.BodyMedium"
                android:paddingBottom="12dp" />

            <!-- 4 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. Third-Party Services"
                style="@style/TextAppearance.Material3.TitleMedium"
                android:textStyle="bold"
                android:paddingTop="12dp"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We use the Audius API to stream music content. While we do not collect or store any music files, please note:"
                style="@style/TextAppearance.Material3.BodyMedium" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â€¢ All songs are streamed via the Audius platform\nâ€¢ We do not claim ownership over any music content\nâ€¢ Usage of this app implies acceptance of Audiusâ€™ content licenses and streaming limitations\nâ€¢ We do not use any third-party analytics or advertising services at this time."
