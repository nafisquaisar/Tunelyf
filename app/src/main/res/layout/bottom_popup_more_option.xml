<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_top_rounded"
    android:padding="16dp">

    <TextView
        android:id="@+id/addSong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="8dp"
        android:padding="12dp"
        android:text="@string/add_song"
        android:drawableTint="@color/black"
        android:textAppearance="?attr/textAppearanceListItem"
        app:drawableLeftCompat="@drawable/add_song" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD" />

    <TextView
        android:id="@+id/removeall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="8dp"
        android:padding="12dp"
        android:text="@string/remove_all"
        android:textAppearance="?attr/textAppearanceListItem"
        app:drawableLeftCompat="@drawable/remove_all" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD" />


    <TextView
        android:id="@+id/selectDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="8dp"
        android:padding="12dp"
        android:text="Select and Remove Songs"
        android:textAppearance="?attr/textAppearanceListItem"
        app:drawableLeftCompat="@drawable/delete"
        app:drawableTint="@color/black" />

</LinearLayout>
