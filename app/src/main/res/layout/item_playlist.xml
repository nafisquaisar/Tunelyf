<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="@dimen/_2sdp"
    app:cardElevation="3dp"
    app:cardCornerRadius="@dimen/_7sdp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/_5sdp">

        <!-- Playlist Icon -->
        <ImageView
            android:id="@+id/playlistIcon"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/musicicon"
            android:background="@drawable/rounded_icon_background"
            android:scaleType="fitXY"
            android:clipToOutline="true"
            android:contentDescription="Playlist Icon"
            android:padding="0dp" />


        <!-- Title + Song Count -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tvPlaylistTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Playlist 1"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvPlaylistCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="32 songs"
                android:textColor="#777777"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- More Options Icon -->
        <ImageView
            android:id="@+id/imgMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_more_vert_24"
            android:contentDescription="More Options"
            app:tint="#555555" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
