                android:layout_height="80dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/shimmer_background"
                android:padding="8dp">

                <!-- ðŸŽµ Icon Placeholder -->
                <View
                    android:id="@+id/shimmerIcon"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:background="@drawable/shimmer_placeholder_rounded"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- ðŸ“ Title -->
                <View
                    android:id="@+id/shimmerTitle"
                    android:layout_width="150dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/shimmer_placeholder_rounded"
                    app:layout_constraintStart_toEndOf="@id/shimmerIcon"
                    app:layout_constraintTop_toTopOf="@id/shimmerIcon" />

                <!-- ðŸ—’ Subtitle -->
                <View
                    android:id="@+id/shimmerSubtitle"
                    android:layout_width="100dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/shimmer_placeholder_rounded"
                    app:layout_constraintStart_toStartOf="@id/shimmerTitle"
                    app:layout_constraintTop_toBottomOf="@id/shimmerTitle" />

                <!-- â± Duration -->
                <View
                    android:id="@+id/shimmerDuration"
                    android:layout_width="32dp"
                    android:layout_height="10dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/shimmer_placeholder_rounded"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/shimmerTitle" />

            </androidx.constraintlayout.widget.ConstraintLayout>

