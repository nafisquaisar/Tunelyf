<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nowPlayingRoot"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_45sdp"
    android:background="@drawable/now_playing_bg"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    tools:context=".Fragment.NowPlayingStream">

    <!-- Album Art -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/music_image"
        android:layout_width="@dimen/_32sdp"
        android:layout_height="@dimen/_32sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/music_img"
        android:contentDescription="Thumbnail"
        app:shapeAppearanceOverlay="@style/curved"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Song Title -->
    <TextView
        android:id="@+id/music_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:scrollHorizontally="true"
        android:text="Song Title"
        android:textStyle="bold"
        android:textColor="@color/alwayswhite"
        android:textSize="@dimen/_14ssp"
        android:gravity="center_vertical"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        app:layout_constraintStart_toEndOf="@id/music_image"
        app:layout_constraintEnd_toStartOf="@id/prev_btn_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Previous Button -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/prev_btn_container"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginHorizontal="2dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintEnd_toStartOf="@id/play_btn_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/prev_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:padding="4dp"
            android:src="@drawable/previous_notification"
            app:tint="@color/icon_color" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Play/Pause Button -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/play_btn_container"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginHorizontal="2dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintEnd_toStartOf="@id/next_btn_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <FrameLayout
            android:id="@+id/playPauseFrame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/play_pause_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:padding="4dp"
                android:src="@drawable/play_notificaiton"
                app:tint="@color/icon_color" />

            <FrameLayout
                android:id="@+id/loadingContainer"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:visibility="gone">

                <ProgressBar
                    android:id="@+id/loadingSpinner"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    style="?android:attr/progressBarStyleSmall"
                    android:indeterminate="true"
                    android:indeterminateTint="@color/icon_color"
                    android:indeterminateTintMode="src_in" />
            </FrameLayout>

        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Next Button -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/next_btn_container"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/next_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:padding="4dp"
            android:src="@drawable/nextplay_notification"
            app:tint="@color/icon_color" />
    </com.google.android.material.card.MaterialCardView>

    <!-- SeekBar -->
    <SeekBar
        android:id="@+id/seek_bar"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/_6sdp"
        android:enabled="false"
        android:max="100"
        android:progress="0"
        android:progressTint="@android:color/holo_red_dark"
        android:thumb="@android:color/transparent"
        android:thumbTint="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/music_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
